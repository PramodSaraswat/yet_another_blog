<div class="col col-sm-6 my-3 mx-auto">
  <h1>All Posts</h1>

  <% @articles.each do |article| %>
    <div class="col col-sm-12 border mt-3">
      <h1 class="mx-auto"><%= article.title %></h1>
       
      <div class="col-sm-12 border-top my-3">
        <p style="word-wrap: break-word;"><%= article.text %></p>
        <%= link_to 'Show', article_path(article), class:"btn btn-primary" %>
        <%= link_to 'Edit', edit_article_path(article), class:"btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>